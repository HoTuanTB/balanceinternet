{%- style -%}
  .homepage-slide-container {
    position: relative;
    width: 100%;
    height: 125vh;
    overflow: hidden;
    background-color: #000;
  }

  .homepage-slide-container__video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .homepage-slide-container__video::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to right, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.4) 50%, rgba(0, 0, 0, 0.2) 100%);
    z-index: 1;
  }

  .homepage-slide-container__content {
    text-align: left;
    position: relative;
    z-index: 2;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 0 10%;
    justify-content: flex-end;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1s ease forwards;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .homepage-slide-container__subtitle {
    max-width: 30%;
    font-family: 'Poppins', sans-serif;
    font-size: 2rem;
    font-weight: 400;
    line-height: 1.5;
    color: #fff;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
    margin-bottom: 20px;
    opacity: 0;
    animation: fadeIn 0.8s ease forwards;
    animation-delay: 0.2s;
  }

  .homepage-slide-container__expert-text {
    font-family: 'Poppins', sans-serif;
    font-size: 12rem;
    font-weight: 700;
    line-height: 1.2;
    color: #fff;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    margin-top: 20px;
    opacity: 0;
    animation: fadeIn 0.8s ease forwards;
    animation-delay: 0.5s;
    max-width: 100%;
    text-align: left;
  }

  .homepage-slide-container__titles {
    display: none;
  }

  .homepage-slide-container__title {
    font-family: 'Poppins', sans-serif;
    font-size: 5.5rem;
    font-weight: 700;
    line-height: 1.2;
    color: #fff;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    opacity: 0;
    animation: fadeIn 0.8s ease forwards;
  }

  .homepage-slide-container__title:nth-child(1) {
    animation-delay: 0.3s;
  }
  .homepage-slide-container__title:nth-child(2) {
    animation-delay: 0.6s;
  }
  .homepage-slide-container__title:nth-child(3) {
    animation-delay: 0.9s;
  }

  .homepage-slide-container__buttons {
    display: flex;
    justify-content: flex-end;
    gap: 20px;
    margin-top: 20px;
    opacity: 1;
    z-index: 4;
    position: absolute;
    bottom: 20px;
    right: 35rem;
  }

  .homepage-slide-container__button {
    font-family: 'Poppins', sans-serif;
    font-size: 1.8rem;
    font-weight: 600;
    color: #fff;
    background-color: rgba(0, 0, 0, 0.5);
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .homepage-slide-container__button:hover {
    background-color: rgba(0, 0, 0, 0.7);
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }

  .middle-content-text {
    color: white;
    font-size: 26px;
    border-bottom: 1px solid white;
    padding-bottom: 4rem;
  }

  a {
    color: white;
    text-decoration: none;
    display: flex;
    align-items: center;
  }

  .bi {
    margin-left: 5px;
  }

  .button-transparent {
    background-image: url('https://www.balanceinternet.com.au/wp-content/themes/Balance%20Internet%202018%20-%20SASS/img/icon/go-circle-white.svg');
    background-size: cover;
    display: inline-block;
    width: 48px;
    height: 48px;
    color: #fff;
    margin-left: 20px;
  }
  .middle-cta-banner__content a:hover span {
    color: red;
  }

  .middle-cta-banner__content a:hover {
    color: transparent;
    background-image: linear-gradient(to right, pink, cyan);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .middle-cta-banner__content a:hover .button-transparent {
    margin-left: 20px;
    border-radius: 100%;
  }

  @media screen and (max-width: 990px) {
    .homepage-slide-container {
      height: 75vh;
    }

    .homepage-slide-container__subtitle {
      font-size: 14px;
      max-width: 100%;
    }

    .homepage-slide-container__expert-text {
      font-size: 4rem;
      max-width: 100%;
    }

    .middle-content-text {
      font-size: 14px;
      padding-bottom: 4rem;
    }

    .button-transparent {
      width: 25px;
      height: 25px;
      margin-left: 10px;
    }
  }
{%- endstyle -%}

